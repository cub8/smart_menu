generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Meal {
  id                Int        @id @default(autoincrement())
  name              String
  ingredients       Json
  description       String?
  recipe            Json?
  mealPlans         MealPlan[]
  suggestedMealType MealType[]
  tags              Tag[]      @relation("MealTags")
}

enum DayOfWeek {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
}

model Tag {
  id              Int              @id @default(autoincrement())
  name            String
  userPreferences UserPreference[]
  meals           Meal[]           @relation("MealTags")
}

model User {
  id          String           @id @default(cuid())
  email       String           @unique
  password    String
  name        String?
  createdAt   DateTime         @default(now())
  mealPlans   MealPlan[] //one to many
  preferences UserPreference[]
}

enum MealType {
  BREAKFAST
  LUNCH
  DINNER
  DESSERT
}

model MealPlan {
  id     Int      @id @default(autoincrement())
  date   DateTime
  type   MealType
  mealId Int
  meal   Meal     @relation(fields: [mealId], references: [id])
  userId String
  user   User     @relation(fields: [userId], references: [id])
}

model UserPreference {
  userId    String
  dayOfWeek DayOfWeek @default(MONDAY)
  tagId     Int
  user      User      @relation(fields: [userId], references: [id])
  tag       Tag       @relation(fields: [tagId], references: [id])

  @@id([userId, dayOfWeek, tagId])
}
