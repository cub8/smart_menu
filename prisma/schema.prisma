generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Meal {
  id          Int      @id @default(autoincrement())
  name        String
  tags        String[]
  ingredients String[]
  description String
}

model Tag {
  id   Int    @id @default(autoincrement())
  name String
}
