generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Meal {
  id          Int      @id @default(autoincrement())
  name        String
  tags        String[]
  ingredients String[]
  description String
  users User[] // many-to-many
}

model Tag {
  id   Int    @id @default(autoincrement())
  name String
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  meals Meal[]  // many-to-many
}